<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.telincn.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.telincn.entity.User" >
    <id column="USER_ID" property="userId" jdbcType="DECIMAL" />
    <result column="USER_NICKNAME" property="username" jdbcType="VARCHAR" />
    <result column="USER_PASSWORD" property="password" jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectUserByName" parameterType="String" resultMap="BaseResultMap">
	select USER_ID,USER_NICKNAME,USER_PASSWORD 
	from 
		USER
	where 
		USER_NICKNAME = #{username,jdbcType=VARCHAR}
  </select>

</mapper>